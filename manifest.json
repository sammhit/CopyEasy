{
  "manifest_version":2,


  "name":"CopyEasy",
  "description":"This Extension helps copy easy to your preferred DOcument editor",
  "version":"2.0",

  "browser_action":{
    "default_icon":"icon.png",
    "default_popup": "popup.html"
    
  },
  "background":{
	"scripts":["background.js"]
  },
  "permissions":[
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage",
    "clipboardRead",
    "clipboardWrite"
   ],
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["testScript.js"]
    }
  ]
}
 
    

